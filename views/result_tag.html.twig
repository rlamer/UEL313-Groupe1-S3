{% extends "layout.html.twig" %}

{% block title %}Résultat(s) pour "{{ tag.title }}" {% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="text-center mb-4 display-4">Résultat(s) associé(s) au tag "{{ tag.title }}"</h1>

    {% if links|length <= 0 %}
        <p class="text-center">Aucun résultat ne correspond au tag "{{ tag.title }}".</p>
    {% else %}
        <div class="row">
            {% for link in links %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title display-5">
                                <a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">{{ link.title }}</a>
                            </h5>
                            <p class="card-text">{{ link.desc }}</p>
                            <a href="{{ link.url }}" class="btn btn-primary" target="_blank">Open ></a>
                            <p class="card-footer text-muted mt-3">
                                <em>(by {{ link.user.username }})</em>
                            </p>
                            <div class="tags mt-2">
                                {% for tag in link.tags %}
                                    <a href="{{ path('tag', { 'id': tag.id }) }}" class="badge badge-info mr-2">
                                        {{ tag.title }}
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
